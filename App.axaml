<Application xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 x:Class="ClipBoard.App"
			 xmlns:local="using:ClipBoard"
			 RequestedThemeVariant="Default">
	<!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

	<Application.DataTemplates>
		<local:ViewLocator/>
	</Application.DataTemplates>

	<Application.Styles>
		<FluentTheme />
	</Application.Styles>

	<TrayIcon.Icons>
		<TrayIcons>
			<TrayIcon Icon="/Assets/avalonia-logo.ico"
					  ToolTipText="Avalonia Tray Icon ToolTip" Clicked="View_Click">
				<TrayIcon.Menu>
					<NativeMenu>
						<NativeMenuItem Header="View Clips"  Click="View_Click"/>
						<NativeMenuItem Header="Settings"  Click="Settings_Click"/>
						<NativeMenuItemSeparator />
						<NativeMenuItem Header="Exit" Click="Exit_Click"/>
					</NativeMenu>
				</TrayIcon.Menu>
			</TrayIcon>
		</TrayIcons>
	</TrayIcon.Icons>
</Application>